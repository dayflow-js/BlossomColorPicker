  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.7.2",
    "vite": "^5.4.20",
    "vite-plugin-dts": "^4.5.4"
  },
  "repository": {
    "type": "git",
